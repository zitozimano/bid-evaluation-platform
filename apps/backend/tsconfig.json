{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "strict": false,

    "outDir": "./dist",

    "paths": {
      "@bidplatform/models": ["../../shared/models/src"],
      "@bidplatform/domain": ["../../shared/domain/src"],
      "@bidplatform/api": ["../../shared/api/src"],
      "@bidplatform/ui": ["../../shared/ui/src"],
      "@bidplatform/testing": ["../../shared/testing/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
